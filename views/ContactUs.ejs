<%- include('layouts/head.ejs') %>
    <title>LinkedIn | Contact Us</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap');
        h1 {
            font-family: 'lato', sans-serif;
            font-weight: 600;
            font-size: 72px;
            color: rgba(0, 0, 0, 0.548);
            text-align: center;
            text-transform: capitalize;
        }
        
        h4 {
            font-family: 'lato', sans-serif;
            font-weight: 400;
            font-size: 23px;
            color: rgba(0, 0, 0, 0.568);
            line-height: 1.5;
        }
        
        input:focus~label,
        textarea:focus~label,
        input:valid~label,
        textarea:valid~label {
            font-size: 0.75em;
            color: #d3cece;
            top: -5px;
            transition: all 0.225s ease;
        }
        
        .styled-input {
            float: left;
            width: 293px;
            margin: 1rem 0;
            position: relative;
            border-radius: 4px;
        }
        
        @media only screen and (max-width: 768px) {
            .styled-input {
                width: 100%;
            }
        }
        
        .styled-input label {
            color: rgba(0, 0, 0, 0.568);
            padding: 1.3rem 30px 1rem 30px;
            position: absolute;
            top: 10px;
            left: 0;
            transition: all 0.25s ease;
            pointer-events: none;
        }
        
        .styled-input.wide {
            width: 650px;
            max-width: 100%;
        }
        
        input,
        textarea {
            padding: 30px;
            border: 0;
            width: 100%;
            font-size: 1rem;
            background-color: #2595beaf;
            color: whitesmoke;
            border-radius: 4px;
        }
        
        input:focus,
        textarea:focus {
            outline: 0;
        }
        
        input:focus~span,
        textarea:focus~span {
            width: 100%;
            transition: all 0.075s ease;
        }
        
        textarea {
            width: 100%;
            min-height: 12em;
        }
        
        .input-container {
            width: 650px;
            max-width: 100%;
            margin: 20px auto 25px auto;
        }
        
        .submit-btn {
            margin-bottom: 10px;
            padding: 7px 35px;
            border-radius: 45px;
            display: inline-block;
            background-color: rgb(255, 0, 95);
            color: white;
            font-size: 18px;
            cursor: pointer;
            transition: all 300ms ease;
            border-color: rgb(255, 0, 95);
        }
        
        .submit-btn:hover {
            transform: translateY(1px);
            box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.10), 0 1px 1px 0 rgba(0, 0, 0, 0.09);
            background-color: rgba(255, 0, 100, 0.7);
            color: #d3cece;
            border-color: rgba(255, 0, 100, 0.7);
        }
        
        @media (max-width: 768px) {
            .submit-btn {
                width: 35%;
                text-align: center;
            }
        }
    </style>

    </head>

    <body>
        <%- include('layouts/navigation.ejs') %>
            <main>
                <div class="container">
                    <div class="row">
                        <h1>contact us</h1>
                    </div>
                    <div class="row">
                        <h4 id="welcome" style="text-align:center">We'd love to hear from you!</h4>
                    </div>
                    <div class="row input-container">
                        <form action="post">
                            <div class="col-xs-12">
                                <div class="styled-input wide">
                                    <input type="text" required />
                                    <label>Name</label>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="styled-input">
                                    <input type="text" required />
                                    <label>Email</label>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="styled-input" style="float:right;">
                                    <input type="text" required />
                                    <label>Phone Number</label>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="styled-input wide">
                                    <textarea required></textarea>
                                    <label>Message</label>
                                </div>
                            </div>
                            <div style="text-align: center;" class="col-xs-12">
                                <button style=" height: 60px; width: 320px;" type="submit" class="btn-lrg submit-btn">Send Message </button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
            <%- include('layouts/foot.ejs') %>